@model BookStore.DAL.Model.Author

<div class="modal-content">
    <div class="container">

        <dl>
            <dd>
                <h3>Удаление из списка</h3>
            </dd>

            <dt>Имя</dt>
            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt>Фамилия</dt>
            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt>Год рождения</dt>
            <dd>
                @Html.DisplayFor(model => model.Birthday)
            </dd>

            <dd>
                @using (Html.BeginForm())
                {
                    <input type="submit" class="btn btn-danger btn-sm" value="Удалить" />
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Назад</button>
                }
            </dd>
        </dl>
    </div>
</div>